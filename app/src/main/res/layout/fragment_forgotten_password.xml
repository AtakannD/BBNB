<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.forgotten_password.ForgottenPasswordFragment">

        <TextView
            android:id="@+id/forgottenPasswordTextt"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_16dp"
            android:text="@string/forgottenPasswordTextt"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/confirmationCodeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_16dp"
            android:text="Lütfen doğrulama kodunu giriniz"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="150dp"
            app:layout_constraintTop_toBottomOf="@id/forgottenPasswordTextt" />


        <EditText
            android:id="@+id/code"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="@dimen/margin_16dp"
               android:hint="Doğrulama Kodu"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@id/confirmationCodeText"
               android:layout_marginTop="8dp"

        />
        <EditText
            android:id="@+id/newPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_16dp"
            android:hint="Yeni Şifre"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/code"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            />
        <EditText
            android:id="@+id/validation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:hint="Şifreyi Doğrula"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/newPassword"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            />
        <Button
            android:id="@+id/buton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_16dp"
            android:text="Şifreyi Sıfırla"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/validation"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/grayish_dusty_rose"
            android:textColor="@color/dusty_bluish_teal"
        />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
